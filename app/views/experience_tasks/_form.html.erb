<%= form_for @experience_task, :html => { :class => "form-horizontal experience_task" } do |f| %>

  <% if @experience_task.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@experience_task.errors.count, "error") %> prohibited this experience_task from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @experience_task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :user_id, User.all, :id, :name, class: 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>
  <div class="form-group">
    <%= f.label :task_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :task_id, Task.all, :id, :name, class: 'form-control' %>

    </div>
    <%=f.error_span(:task_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                experience_tasks_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
