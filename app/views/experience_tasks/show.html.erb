<div class="col-lg-12">
  <%- model_class = ExperienceTask -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
  </div>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
    <dd><%= @experience_task.user.name %></dd>
    <dt><strong><%= model_class.human_attribute_name(:task_id) %>:</strong></dt>
    <dd><%= @experience_task.task.name %></dd>
  </dl>

  <%= link_to t('.back', :default => t("helpers.links.back")),
                experience_tasks_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_experience_task_path(@experience_task), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                experience_task_path(@experience_task),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
</div>
