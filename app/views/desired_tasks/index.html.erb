<p id="notice"><%= notice %></p>

<h1>Listing Desired Tasks</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Task</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @desired_tasks.each do |desired_task| %>
      <tr>
        <td><%= desired_task.user_id %></td>
        <td><%= desired_task.task_id %></td>
        <td><%= link_to 'Show', desired_task %></td>
        <td><%= link_to 'Edit', edit_desired_task_path(desired_task) %></td>
        <td><%= link_to 'Destroy', desired_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

