<div class="col-lg-12">
  <%- model_class = DriverLicense -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
  </div>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:license_type) %>:</strong></dt>
    <dd><%= @driver_license.license_type %></dd>
  </dl>

  <%= link_to t('.back', :default => t("helpers.links.back")),
                driver_licenses_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_driver_license_path(@driver_license), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                driver_license_path(@driver_license),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
</div>
