<%= form_for @driver_license, :html => { :class => "form-horizontal driver_license" } do |f| %>

  <% if @driver_license.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@driver_license.errors.count, "error") %> prohibited this driver_license from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @driver_license.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :license_type, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :license_type, :class => 'form-control' %>
    </div>
    <%=f.error_span(:license_type) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                driver_licenses_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
