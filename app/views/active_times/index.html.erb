<div class="col-lg-12">
  <%- model_class = ActiveTime -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:user_id) %></th>
        <th><%= model_class.human_attribute_name(:shift_time_id) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @active_times.each do |active_time| %>
        <tr>
          <td><%= active_time.user.name %></td>
          <td><%= active_time.shift_time.shift_datetime %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_active_time_path(active_time), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        active_time_path(active_time),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_active_time_path,
              :class => 'btn btn-primary' %>
</div>
