<div class="col-lg-12">
  <%- model_class = ActiveTime -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
  </div>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
    <dd><%= @active_time.user.name %></dd>
    <dt><strong><%= model_class.human_attribute_name(:shift_time_id) %>:</strong></dt>
    <dd><%= @active_time.shift_time.shift_datetime %></dd>
  </dl>

  <%= link_to t('.back', :default => t("helpers.links.back")),
                active_times_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_active_time_path(@active_time), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                active_time_path(@active_time),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
</div>
