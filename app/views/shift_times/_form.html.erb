<%= form_for @shift_time, :html => { :class => "form-horizontal shift_time" } do |f| %>

  <% if @shift_time.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@shift_time.errors.count, "error") %> prohibited this shift_time from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @shift_time.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :shift_date_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :shift_date_id, ShiftDate.all, :id, :date, class: 'form-control' %>
    </div>
    <%=f.error_span(:shift_date_id) %>
  </div>

  <div class="form-group">
    <%= f.label :shift_time, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.datetime_select :shift_time, {discard_year: true, discard_month: true, discard_day: true, class: 'form-control'} %>
    </div>
    <%=f.error_span(:shift_time) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                shift_times_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
