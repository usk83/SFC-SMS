<p id="notice"><%= notice %></p>

<h1>Listing Responsible Tasks</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Task</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @responsible_tasks.each do |responsible_task| %>
      <tr>
        <td><%= responsible_task.user_id %></td>
        <td><%= responsible_task.task_id %></td>
        <td><%= link_to 'Show', responsible_task %></td>
        <td><%= link_to 'Edit', edit_responsible_task_path(responsible_task) %></td>
        <td><%= link_to 'Destroy', responsible_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

