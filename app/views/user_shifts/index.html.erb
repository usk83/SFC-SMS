<p id="notice"><%= notice %></p>

<h1>Listing User Shifts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Task shift</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_shifts.each do |user_shift| %>
      <tr>
        <td><%= user_shift.user_id %></td>
        <td><%= user_shift.task_shift_id %></td>
        <td><%= link_to 'Show', user_shift %></td>
        <td><%= link_to 'Edit', edit_user_shift_path(user_shift) %></td>
        <td><%= link_to 'Destroy', user_shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

