<%= form_for @affiliation, :html => { :class => "form-horizontal affiliation" } do |f| %>

  <% if @affiliation.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@affiliation.errors.count, "error") %> prohibited this affiliation from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @affiliation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :user_id, User.all, :id, :name, class: 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>
  <div class="form-group">
    <%= f.label :committee_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :committee_id, Committee.all, :id, :name, class: 'form-control' %>
    </div>
    <%=f.error_span(:committee_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                affiliations_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
