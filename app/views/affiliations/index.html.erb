<div class="col-lg-12">
  <%- model_class = Affiliation -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:user_id) %></th>
        <th><%= model_class.human_attribute_name(:committee_id) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @affiliations.each do |affiliation| %>
        <tr>
          <td><%= affiliation.user.name %></td>
          <td><%= affiliation.committee.name %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_affiliation_path(affiliation), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        affiliation_path(affiliation),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_affiliation_path,
              :class => 'btn btn-primary' %>
</div>
