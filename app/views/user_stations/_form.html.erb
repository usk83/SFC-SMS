<%= form_for @user_station, :html => { :class => "form-horizontal user_station" } do |f| %>

  <% if @user_station.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@user_station.errors.count, "error") %> prohibited this user_station from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @user_station.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :user_id, User.all, :id, :name, class: 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>
  <div class="form-group">
    <%= f.label :station_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :station_id, Station.all, :id, :name, class: 'form-control' %>
    </div>
    <%=f.error_span(:station_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_stations_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
