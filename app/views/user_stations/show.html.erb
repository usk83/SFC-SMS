<div class="col-lg-12">
  <%- model_class = UserStation -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
  </div>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
    <dd><%= @user_station.user.name %></dd>
    <dt><strong><%= model_class.human_attribute_name(:station_id) %>:</strong></dt>
    <dd><%= @user_station.station.name %></dd>
  </dl>

  <%= link_to t('.back', :default => t("helpers.links.back")),
                user_stations_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_user_station_path(@user_station), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                user_station_path(@user_station),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
</div>
