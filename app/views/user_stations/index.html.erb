<div class="col-lg-12">
  <%- model_class = UserStation -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:user_id) %></th>
        <th><%= model_class.human_attribute_name(:station_id) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @user_stations.each do |user_station| %>
        <tr>
          <td><%= user_station.user.name %></td>
          <td><%= user_station.station.name %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_user_station_path(user_station), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        user_station_path(user_station),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_user_station_path,
              :class => 'btn btn-primary' %>
</div>
