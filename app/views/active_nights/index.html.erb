<div class="col-lg-12">
  <%- model_class = ActiveNight -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:user_id) %></th>
        <th><%= model_class.human_attribute_name(:allnight_id) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @active_nights.each do |active_night| %>
        <tr>
          <td><%= active_night.user.name %></td>
          <td><%= active_night.allnight.date %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_active_night_path(active_night), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        active_night_path(active_night),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_active_night_path,
              :class => 'btn btn-primary' %>
</div>
