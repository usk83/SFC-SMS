<div class="col-lg-12">
  <%- model_class = ActiveNight -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
  </div>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
    <dd><%= @active_night.user_id %></dd>
    <dt><strong><%= model_class.human_attribute_name(:allnight_id) %>:</strong></dt>
    <dd><%= @active_night.allnight_id %></dd>
  </dl>

  <%= link_to t('.back', :default => t("helpers.links.back")),
                active_nights_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_active_night_path(@active_night), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                active_night_path(@active_night),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
</div>
