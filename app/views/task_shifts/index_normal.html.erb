<div class="col-lg-12">
  <%- model_class = TaskShift -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:task_id) %></th>
        <th><%= model_class.human_attribute_name(:shift_time_id) %></th>
        <th><%= model_class.human_attribute_name(:min_num) %></th>
        <th><%= model_class.human_attribute_name(:max_num) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @task_shifts.each do |task_shift| %>
        <tr>
          <td><%= link_to task_shift.id, task_shift_path(task_shift) %></td>
          <td><%= task_shift.task.name %></td>
          <td><%= task_shift.shift_time.shift_datetime%></td>
          <td><%= task_shift.min_num %></td>
          <td><%= task_shift.max_num %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_task_shift_path(task_shift), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        task_shift_path(task_shift),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_task_shift_path,
              :class => 'btn btn-primary' %>
</div>
